package com.mystudy;
import java.util.ArrayList;
public class StudentManager {
	public static void main(String[] args) {
		//StudentVO[] std = new StudentVO[3];
		
		ArrayList list1 = new ArrayList();
		
		StudentVO st1 = new StudentVO("홍길동", 100, 90, 81);
		StudentVO st2 = new StudentVO("이순신", 95, 88, 92);
		StudentVO st3 = new StudentVO("김유신", 90, 87, 77);
		
		list1.add(st1);
		list1.add(st2);
		list1.add(st3);
		
		System.out.println("성명\t국어\t영어\t수학\t총점\t평균");
		for(int i = 0; i < list1.size(); i++) {
			StudentVO temp = (StudentVO)list1.get(i);
			temp.diplye();
		}
		
//		System.out.println("----------------");
//		StudentVO temp = (StudentVO)list1.get(0);
//		temp.diplye();
	}
}
