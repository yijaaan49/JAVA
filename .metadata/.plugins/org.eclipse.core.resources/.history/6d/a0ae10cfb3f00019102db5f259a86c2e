package com.mystudy;
import java.util.ArrayList;
public class StudentManager {
	public static void main(String[] args) {
		StudentVO[] std = new StudentVO[3];
		ArrayList<StudentVO> list1 = new ArrayList<StudentVO>();
		std[0] = new StudentVO("홍길동", 100, 90, 81);
		std[1] = new StudentVO("이순신", 95, 88, 92);
		std[2] = new StudentVO("김유신", 90, 87, 77);
		for(StudentVO i : std)
			list1.add(i);
		System.out.println("성명\t국어\t영어\t수학\t총점\t평균");
		for(int i = 0; i < list1.size(); i++)
			list1.get(i).diplye();
	}
}
